[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto

[merge]
    #tool = meld
    tool = diffuse
    #tool = diffuse

[diff]
   tool = diffuse
   suppressBlankEmpty = true
#   noprefix = true

# convert po files to a less noisy
# # variant for display in git log -p etc
# # note that textconv does not affect
# # git-format-patch output
[diff "po"]
    textconv=po_diff

[diff "pot"]
    textconv=pot_diff
    # the line's it was picking for the "funcname"
    # context were kind of terrible for this case, so
    # just match a blank line so it's empty
    xfuncname = "^$"
    cachetextconv = true

#
# custom python xfuncname from
# https://github.com/cofi/dotfiles/blob/master/gitconfig
#[diff "python"]
#    xfuncname="^\\s*(class.*\\(.*\\)|def.*)(\\(|:)"

[mergetool "vimdiff3"]
   cmd = vim -f -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"

[branch]
	autosetupmerge = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[github]
   user = alikins

#[diff "po"]
